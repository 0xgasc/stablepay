generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Chain {
  BASE_SEPOLIA
  BASE_MAINNET
  ETHEREUM_SEPOLIA
  ETHEREUM_MAINNET
  POLYGON_MAINNET
  POLYGON_MUMBAI
  ARBITRUM_MAINNET
  ARBITRUM_SEPOLIA
  SOLANA_MAINNET
  SOLANA_DEVNET
}

enum OrderStatus {
  PENDING
  PAID
  CONFIRMED
  REFUNDED
  EXPIRED
  CANCELLED
}

enum TransactionStatus {
  PENDING
  CONFIRMED
  FAILED
}

enum RefundStatus {
  PENDING
  APPROVED
  REJECTED
  PROCESSED
}

enum UserRole {
  ADMIN
  MERCHANT
}

enum PlanType {
  STARTER
  GROWTH
  ENTERPRISE
}

enum PaymentMode {
  DIRECT
  ESCROW
}

enum NetworkMode {
  TESTNET
  MAINNET
}

model Merchant {
  id              String      @id @default(cuid())
  email           String      @unique
  companyName     String
  contactName     String
  role            UserRole    @default(MERCHANT)
  plan            PlanType?
  paymentMode     PaymentMode @default(DIRECT)
  networkMode     NetworkMode @default(TESTNET)
  isActive        Boolean     @default(false)
  setupCompleted  Boolean     @default(false)
  invoiceEnabled  Boolean     @default(false)
  passwordHash    String?
  loginToken      String?     @unique
  tokenExpiresAt  DateTime?
  website         String?
  industry        String?
  monthly_volume  Decimal?    @db.Decimal(18, 2) @map("monthly_volume")
  notes           String?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  wallets         MerchantWallet[]
  orders          Order[]
  invoices        Invoice[]

  @@map("merchants")
}

model MerchantWallet {
  id          String    @id @default(cuid())
  merchantId  String
  chain       Chain
  address     String
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  merchant    Merchant  @relation(fields: [merchantId], references: [id], onDelete: Cascade)

  @@unique([merchantId, chain])
  @@map("merchant_wallets")
}

model Order {
  id              String      @id @default(cuid())
  merchantId      String?     // NULL for DEMO orders
  customerEmail   String?
  customerName    String?
  amount          Decimal     @db.Decimal(18, 6)
  chain           Chain
  status          OrderStatus @default(PENDING)
  paymentAddress  String
  expiresAt       DateTime
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  merchant        Merchant?   @relation(fields: [merchantId], references: [id])
  transactions    Transaction[]
  refunds         Refund[]

  @@index([merchantId])
  @@map("orders")
}

model Transaction {
  id              String            @id @default(cuid())
  orderId         String
  txHash          String            @unique
  chain           Chain
  amount          Decimal           @db.Decimal(18, 6)
  fromAddress     String
  toAddress       String
  blockNumber     BigInt?
  blockTimestamp  DateTime?
  status          TransactionStatus @default(PENDING)
  confirmations   Int               @default(0)
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  order           Order             @relation(fields: [orderId], references: [id])

  @@map("transactions")
}

model Refund {
  id              String       @id @default(cuid())
  orderId         String
  amount          Decimal      @db.Decimal(18, 6)
  reason          String
  status          RefundStatus @default(PENDING)
  approvedBy      String?
  refundTxHash    String?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  order           Order        @relation(fields: [orderId], references: [id])

  @@map("refunds")
}

enum InvoiceStatus {
  DRAFT
  SENT
  PAID
  OVERDUE
  CANCELLED
}

model Invoice {
  id              String        @id @default(cuid())
  merchantId      String
  invoiceNumber   String        // Auto-generated: INV-001, INV-002, etc.
  customerName    String
  customerEmail   String

  // Line items stored as JSON
  items           Json          // [{description, quantity, price, total}]

  subtotal        Decimal       @db.Decimal(18, 6)
  taxRate         Decimal?      @db.Decimal(5, 2)  // e.g., 7.5 for 7.5%
  taxAmount       Decimal?      @db.Decimal(18, 6)
  discount        Decimal?      @db.Decimal(18, 6)
  total           Decimal       @db.Decimal(18, 6)

  currency        String        @default("USDC")  // USDC, USDT, EURC
  chain           Chain?        // Selected payment chain (null = customer chooses)

  status          InvoiceStatus @default(DRAFT)
  notes           String?       // Additional notes for customer
  dueDate         DateTime?
  paidAt          DateTime?
  sentAt          DateTime?

  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  merchant        Merchant      @relation(fields: [merchantId], references: [id], onDelete: Cascade)

  @@unique([merchantId, invoiceNumber])
  @@index([merchantId])
  @@index([status])
  @@map("invoices")
}

model ChainConfig {
  id                String @id @default(cuid())
  chain             Chain  @unique
  rpcUrl            String
  usdcAddress       String
  paymentAddress    String
  requiredConfirms  Int    @default(12)
  blockTimeSeconds  Int    @default(12)
  lastScannedBlock  BigInt @default(0)

  @@map("chain_configs")
}

